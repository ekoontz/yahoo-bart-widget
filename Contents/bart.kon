<?konfabulator xml-strict="true"?>
<widget minimumVersion="4.5">
  <settings>
    <setting name="debug" value="off"/>
  </settings>

  <action trigger="onPreferencesChanged">
    reload_etas();
  </action>

  <action trigger="onLoad">
